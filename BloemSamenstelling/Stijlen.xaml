<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BloemSamenstelling">
    <Style TargetType="{x:Type Ellipse}">
        <Setter Property="Height" Value="100"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Fill" Value="{Binding ElementName=cirkelsKleuren, Path=SelectedValue}"/>
        <Setter Property="Stroke" Value="{Binding ElementName=cirkelKaderKleuren, Path=SelectedValue }"/>
        <Setter Property="StrokeThickness" Value="{Binding ElementName=diktecirkelSlider, Path=Value}"/>
    </Style>
    <Style TargetType="{x:Type Rectangle}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Fill" Value="{Binding ElementName=rechthoekenKleuren, Path=SelectedValue}"/>
        <Setter Property="Stroke" Value="{Binding ElementName=rechthoekKaderKleuren, Path=SelectedValue }"/>
        <Setter Property="StrokeThickness" Value="{Binding ElementName=dikterechthoekSlider, Path=Value}"/>
    </Style>
    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>